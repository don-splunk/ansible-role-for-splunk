{
    "python.pythonPath": "venv/bin/python",

    "ansible.python.activationScript": "venv/bin/activate",
    "ansible.python.interpreterPath": "venv/bin",
    "ansible.ansible.path": "venv/bin/ansible",
    "ansible.ansibleLint.path": "venv/bin/ansible-lint",
    "ansible.ansibleNavigator.path": "venv/bin/ansible-navigator",

    "ansible.executionEnvironment.enabled": false,


    "editor.quickSuggestionsDelay": 10,
    "editor.defaultFormatter": "esbenp.prettier-vscode",


    "ansible.ansible.useFullyQualifiedCollectionNames": false,

    "files.associations": {
        "*.yml": "ansible"
    },
    "files.watcherExclude": {
        "**/venv/**": true,
        "venv": true
    },
}